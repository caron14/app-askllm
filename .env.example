# Hugging Face Configuration
HF_TOKEN=your_huggingface_token_here

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0

# Model Configuration
QUANTIZATION=none  # Options: none, 8bit, 4bit

# Distributed Processing
NUM_WORKERS=4
RAY_ADDRESS=  # Leave empty for local Ray, or set to ray://head-node:10001

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Model Cache Paths (mounted as volumes)
HF_HOME=/app/.cache/huggingface
TRANSFORMERS_CACHE=/app/.cache/transformers

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production  # Options: production, development
CHECKPOINT_FREQUENCY=10
BATCH_SIZE=32

# Optional: External Services
MLFLOW_TRACKING_URI=
WANDB_API_KEY=
WANDB_PROJECT=hle-screener